num_gpus: 8
model: 'AdapNet_shared'
dataset_name: 'scannet'
input_modality: 'rgb'
output_modality:
  - 'labels'
  - 'normals'
num_classes:
  - 21
  - 3
loss_weights:
  - 1.0
  - 10.0
intialize:  'checkpoints/scannet/normals/model.ckpt-150000'
checkpoint: 'checkpoints/scannet/shared_n_10/'
summary_dir: 'graphs/scannet/shared_n_10/'
train_data: 'scannet_train.txt'
aux_loss_mode: 'true'
batch_size: 6
skip_step: 5
height: 384
width: 768
max_iteration: 150000
learning_rate: 0.001
save_step: 10000
summaries_step: 400
power: 0.9
aug_max_rotation: 7
aug_flip_prob: 0.5
aug_blur_max: 9
aug_max_noise_var: 0.0025
aug_max_crop_percent: 0.15
